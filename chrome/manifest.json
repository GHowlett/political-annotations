{
  "name": "Political Annotations",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Inline political annotations.",
  "homepage_url": "http://lincolnlabs.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "src/inject/inject.css",
        "src/inject/d3-tip.css"
      ]
    },
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/jquery/jquery.js",
        "js/d3/d3.js",
        "js/d3-tip/index.js",
        "src/inject/inject.js"
      ]
    }
  ],
  "web_accessible_resources": ["src/inject/senate.js"]
}
